<h1>Students Enrolled</h1>

<table>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Enrolment Date</th>
    <th>Courses Enrolled</th>
    <th>Edit Courses</th>
  </tr>
  @foreach (var student in Model)
  {
    <tr>
      <td>@student.GetId()</td>
      <td>@student.GetStudentName()</td>
      <td>@student.GetEnrolmentDate()</td>
      <td>

          @foreach (var course in @student.GetCourses())
          {
            @course.GetCourseName()<br>
          }

      </td>
      <td><a href="/student/@student.GetId()/courses/add">Add Course</a></td>
    </tr>
  }
</table>

<a href="/student/add">Add Student</a>
<a href="/">Home Page</a>
